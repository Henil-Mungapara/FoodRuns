<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#FFE6EB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description goes here"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/itemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="13sp"
            android:textColor="#777777"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/itemAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹100"
            android:textColor="#FA003F"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal" />

        <!-- Button Row (now Icon Row) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnAddToCartIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_addtocart"
                android:backgroundTint="@color/white"
                android:background="@drawable/round_shape"
                android:padding="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btnBuyNowIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_buynow"
                android:backgroundTint="@color/white"
                android:background="@drawable/round_shape"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
