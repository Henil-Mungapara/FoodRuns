<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light gray background -->
    <solid android:color="#F0F0F0" /> <!-- You can also try #EFEFEF or #EEEEEE -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Softer gray border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- You can also use #D0D0D0 -->

    <!-- Padding inside the spinner -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
